##############
# Base image #
##############
FROM ros:noetic-robot as base

ARG CATKIN_WORKSPACE_DIR=${CATKIN_WORKSPACE_DIR}
WORKDIR ${CATKIN_WORKSPACE_DIR}

SHELL ["/bin/bash", "-c"]

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update \
 && apt-get -y install \
    git \
    python3-catkin-tools \
    python3-osrf-pycommon \
    ros-noetic-tf2-sensor-msgs \
 && rm -rf /var/lib/apt/lists/*

RUN cd ${CATKIN_WORKSPACE_DIR}

COPY ../src /catkin_ws/src

WORKDIR ${CATKIN_WORKSPACE_DIR}

RUN source /opt/ros/noetic/setup.bash \
 && catkin build \
 && echo "source /opt/ros/noetic/setup.bash" >> /root/.bashrc \
 && echo "source /catkin_ws/devel/setup.bash" >> /root/.bashrc \
 && echo "source /catkin_ws/devel/setup.bash" >> /ros_entrypoint.sh

RUN catkin build

# TODO: Find a way to get the CMD into the docker-compose yaml file
CMD source /catkin_ws/devel/setup.bash \
 && roslaunch peak_ltpa init.launch

ENV DEBIAN_FRONTEND=dialog
